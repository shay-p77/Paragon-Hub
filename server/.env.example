# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/paragonhub

# Server port
PORT=5000

# Google OAuth Client ID (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here

# Anthropic API Key (for AI parsing features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# ENCRYPTION KEY (REQUIRED for PII protection)
# ===========================================
# Generate a 32-byte (256-bit) key using:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# IMPORTANT:
# - Store this key securely (use secrets manager in production)
# - NEVER commit the actual key to version control
# - If you lose this key, encrypted data cannot be recovered
# - Backup this key securely
#
ENCRYPTION_KEY=your_64_character_hex_key_here
